<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation.xml"
    app:startDestination="@id/dashboardFragment">
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.bluetoothscannerapplication.presentation.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_pairedDevicesFragment"
            app:destination="@id/pairedDevicesFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_deviceScanFragment"
            app:destination="@id/deviceScanFragment" />
    </fragment>
    <fragment
        android:id="@+id/pairedDevicesFragment"
        android:name="com.example.bluetoothscannerapplication.presentation.paireddevice.PairedDevicesFragment"
        android:label="fragment_paired_devices"
        tools:layout="@layout/fragment_paired_devices" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.bluetoothscannerapplication.presentation.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/deviceScanFragment"
        android:name="com.example.bluetoothscannerapplication.presentation.scan.DeviceScanFragment"
        android:label="fragment_device_scan"
        tools:layout="@layout/fragment_device_scan" />
</navigation>